<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ivLogoLivin"
        android:src="@drawable/ic_header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_marginStart="20dp"
        android:id="@+id/tvSelamat"
        android:gravity="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Selamat datang,"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/tvNama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogoLivin"
        />
    <TextView
        android:layout_marginEnd="60dp"
        android:id="@+id/tvNama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tvSelamat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvSelamat"
        app:layout_constraintTop_toTopOf="@id/tvSelamat"
        android:text="Rens Junior Sibarani dfsfdsfdsfsdfsdfsd"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/tvSelamat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_run_livin"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Mau transfer, bayar, dan top up lebih cepat ?"
                android:textSize="16sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:text="Atur Sekarang"
                android:backgroundTint="#7EA9F9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>