<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/componentToolbar"
        layout="@layout/component_toolbar" />

    <ImageView
        android:layout_margin="16dp"
        android:id="@+id/ivLogoDetail"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_livin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/componentToolbar" />

    <TextView
        android:id="@+id/tvDetailTransaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogoDetail"
        android:textStyle="bold"
        android:textSize="18sp"
        tools:text="Transfer Berhasil" />
        <TextView
        android:id="@+id/tvDetailDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailTransaction"
        tools:text="01 Jan 2023" />



</androidx.constraintlayout.widget.ConstraintLayout>