<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintSetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/component_setting_search"
                android:id="@+id/componentSettingSearch"
                />

            <include layout="@layout/component_setting_login"
                android:id="@+id/componentSettingLogin"
                />

            <include layout="@layout/component_setting_akun"
                android:id="@+id/componentSettingAkun"
                />

            <include layout="@layout/component_setting_fitur"
                android:id="@+id/componentSettingFitur"
                />

            <include layout="@layout/component_setting_keamanan"
                android:id="@+id/componentSettingKeamanan"
                />

            <include layout="@layout/component_setting_kartu"
                android:id="@+id/componentSettingKartu"
                />

            <include layout="@layout/component_setting_informasi"
                android:id="@+id/componentSettingInformasi"
                />

            <include layout="@layout/component_setting_logout"
                android:id="@+id/componentSettingLogout"
                />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>